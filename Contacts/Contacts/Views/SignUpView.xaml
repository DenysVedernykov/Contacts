<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Contacts.Views.SignUpView">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#084896" Padding="12" CornerRadius="0">
                <StackLayout Orientation="Horizontal">
                    <Image Source="leftArrow.png" HeightRequest="20" Margin="0, 0, 20, 0"/>
                    <Label Text="Users SignUp" FontFamily="Arial" TextColor="White" FontSize="20"/>
                </StackLayout>
            </Frame>
            <StackLayout Padding="30" VerticalOptions="CenterAndExpand">
                <Entry Placeholder="Login" VerticalTextAlignment="Center"/>
                <Entry Placeholder="Password" VerticalTextAlignment="Center" IsPassword ="True"/>
                <Entry Placeholder="Confirm password" VerticalTextAlignment="Center" IsPassword ="True"/>
            </StackLayout>
            <StackLayout Padding="30" VerticalOptions="CenterAndExpand">
                <Button Text="SIGN UP" VerticalOptions="Center" BackgroundColor="DarkOrange"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>